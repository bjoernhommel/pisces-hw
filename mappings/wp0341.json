            "items": [
                { "itemId": "item3", "itemStemText": "It takes me a while to become aware of certain key issues in my life.", "responseFormatId": "RF1" },
                { "itemId": "item7", "itemStemText": "I often recognize that others see my problems before (and better than) I do.", "responseFormatId": "RF1" },
                { "itemId": "item11", "itemStemText": "I resort to emotional blackmailing when needed.", "responseFormatId": "RF1" },
                { "itemId": "item12", "itemStemText": "In important personal matters in my life, I think I repeatedly make the same mistakes.", "responseFormatId": "RF1" },
                { "itemId": "item14", "itemStemText": "I do not seem to learn from certain mistakes I make in my life.", "responseFormatId": "RF1" },
                { "itemId": "item19", "itemStemText": "I have been told (or it has been insinuated to me) that I manipulate people.", "responseFormatId": "RF1" },
                { "itemId": "item26", "itemStemText": "Honestly, I often choose to answer not with the truth but rather with whatever is most convenient for me.", "responseFormatId": "RF1" },
                { "itemId": "item29", "itemStemText": "If you know me, you'll say that I tend to lie and deceive in order to achieve my goals.", "responseFormatId": "RF1" },
                { "itemId": "item31", "itemStemText": "I sometimes feel my lifestyle is a sham. I live a lie.", "responseFormatId": "RF1" },
                { "itemId": "item35", "itemStemText": "I never resort to emotional manipulation.", "responseFormatId": "RF1" },
                { "itemId": "item38", "itemStemText": "It has been suggested (even if not specifically told) to me that I am wrong about my life.", "responseFormatId": "RF1" },
                { "itemId": "item39", "itemStemText": "Honestly, I am one for changing things for my own convenience.", "responseFormatId": "RF1" }
